<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReCallVocabulary.MainPage"
             xmlns:pages="clr-namespace:ReCallVocabulary.Pages">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
            x:Name="RecallButton"
            Text="Recall" 
               SemanticProperties.Hint="Recall random words from all the dictionary"
            Clicked="Recall_Clicked"
            HorizontalOptions="Fill" />
            <Button
         x:Name="RecallRecentButton"
         Text="Recall recent words" 
         Clicked="RecallRecent_Clicked"
         HorizontalOptions="Fill" />
            <Button
         x:Name="AddWordsButton"
         Text="Add the words" 
         Clicked="Addwords_Clicked"
         HorizontalOptions="Fill" />
            <Button
         x:Name="SeeDictionaryButton"
         Text="See the dictionary" 
         Clicked="SeeDictionary_Clicked"
         HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
