<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReCallVocabulary.Pages.SettingsPage"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label Text="First threshold"/>
        <Slider x:Name="firstThresholdSlider" ValueChanged="FirstThresholdSlider_ValueChanged"/>
        <Label x:Name="firstThresholdLabel" Text=""/>
        <Label Text="Second threshold"/>
        <Switch x:Name="secondThresholdSwitch" IsToggled="False"/>
        <Slider x:Name="secondThresholdSlider" ValueChanged="SecondThresholdSlider_ValueChanged"/>
        <Label x:Name="secondThresholdLabel" Text=""/>
    </VerticalStackLayout>
</ContentPage>